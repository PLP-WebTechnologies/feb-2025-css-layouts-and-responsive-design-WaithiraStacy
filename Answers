CSS (styles.css):
css
Edit
/* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Body and overall layout */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    color: #333;
}

/* Navigation Bar */
nav {
    background-color: #333;
    padding: 1rem;
}

.nav-list {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 20px;
}

.nav-list li {
    display: inline-block;
}

.nav-list a {
    color: white;
    text-decoration: none;
    padding: 10px 15px;
    font-size: 16px;
    transition: background-color 0.3s;
}

.nav-list a:hover {
    background-color: #555;
}

/* Main Content Layout using Flexbox */
.main-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
}

/* Section Styling */
.section {
    margin-bottom: 2rem;
    width: 100%;
    text-align: center;
}

.section h1, .section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
}

.service-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
}

.card {
    background-color: #fff;
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
}

footer {
    text-align: center;
    padding: 1rem;
    background-color: #333;
    color: white;
}

/* Media Queries for responsiveness */
@media (max-width: 768px) {
    .nav-list {
        flex-direction: column;
        align-items: center;
    }

    .service-cards {
        grid-template-columns: 1fr 1fr;
    }

    .card {
        padding: 0.8rem;
    }
}

@media (max-width: 480px) {
    .main-content {
        padding: 1rem;
    }

    .service-cards {
        grid-template-columns: 1fr;
    }

    .nav-list {
        gap: 15px;
    }

    .nav-list a {
        font-size: 14px;
    }

    footer {
        padding: 0.8rem;
    }
}
